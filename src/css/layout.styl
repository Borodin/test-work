body
    font-family 'HelveticaNeue', 'Helvetica Neue', Helvetica, sans-serif, Arial
    line-height 1.5em
    padding 0
    margin 0

*
    box-sizing border-box
    
main
    padding-top 50px
    display flex
    flex-flow wrap
    justify-content center


@media (max-width: 480px)
    header
        padding 16px
        
    article
        min-width 100%

    article .picture
        width calc(100% + 32px)
        margin 0 -16px

